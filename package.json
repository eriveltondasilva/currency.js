{
  "name": "@eriveltonsilva/currency.js",
  "version": "0.0.2",
  "description": "Biblioteca especializada para manipulação de valores monetários, evitando problemas de arredondamento com números de ponto flutuante e oferecendo uma API rica para operações financeiras.",
  "keywords": [
    "currency",
    "currency.js",
    "money",
    "money.js"
  ],
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "author": "Erivelton Silva <eriveltondasilva13@gmail.com>",
  "homepage": "https://github.com/eriveltondasilva/currency.js#readme",
  "repository": "https://github.com/eriveltondasilva/currency.js",
  "bugs": "https://github.com/eriveltondasilva/currency.js/issues",
  "files": [
    "./dist"
  ],
  "contributors": [],
  "prettier": "@eriveltonsilva/prettier-config",
  "scripts": {
    "build": "tsup",
    "start": "node ./dist/index.ts",
    "dev": "tsx --env-file=.env ./src/index.ts",
    "clean": "rm -rf ./dist",
    "fmt": "prettier --write ./",
    "check:types": "tsc --noEmit",
    "test": "vitest run"
  },
  "devDependencies": {
    "@eriveltonsilva/prettier-config": "^1.0.1",
    "@tsconfig/node-ts": "^23.6.1",
    "@tsconfig/node20": "^20.1.5",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^22.15.18",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  }
}
