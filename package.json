{
  "name": "@eriveltonsilva/currency.js",
  "version": "0.0.3",
  "description": "Biblioteca especializada para manipulação de valores monetários, evitando problemas de arredondamento com números de ponto flutuante e oferecendo uma API rica para operações financeiras.",
  "keywords": [
    "currency",
    "currency.js",
    "money",
    "money.js",
    "finance",
    "rounding",
    "decimal",
    "precision",
    "format",
    "monetary"
  ],
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    }
  },
  "sideEffects": false,
  "author": "Erivelton Silva <eriveltondasilva13@gmail.com>",
  "homepage": "https://github.com/eriveltondasilva/currency.js#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/eriveltondasilva/currency.js.git"
  },
  "bugs": {
    "url": "https://github.com/eriveltondasilva/currency.js/issues",
    "email": "eriveltondasilva13@gmail.com"
  },
  "files": [
    "./dist",
    "LICENSE",
    "README.md"
  ],
  "contributors": [],
  "prettier": "@eriveltonsilva/prettier-config",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "npm run test && npm run build",
    "start": "node ./dist/index.cjs",
    "dev": "tsx --env-file=.env ./src/index.ts",
    "clean": "rm -rf ./dist",
    "fmt": "prettier --write ./",
    "check:types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@eriveltonsilva/prettier-config": "^1.0.1",
    "@tsconfig/node-ts": "^23.6.1",
    "@tsconfig/node20": "^20.1.5",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^22.15.18",
    "@vitest/coverage-v8": "^3.1.3",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  }
}
