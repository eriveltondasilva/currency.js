{
  "extends": [
    "@tsconfig/strictest/tsconfig.json",
    "@tsconfig/node20/tsconfig.json",
    "@tsconfig/node-ts/tsconfig.json"
  ],
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "files": true
  },
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    //
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "__tests__",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
