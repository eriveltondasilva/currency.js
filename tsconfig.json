{
  "extends": [
    "@tsconfig/strictest/tsconfig.json",
    "@tsconfig/node20/tsconfig.json",
    "@tsconfig/node-ts/tsconfig.json"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDirs": ["src", "tests"],
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": [
    "node_modules",
    ".github",
    ".husky",
    "assets",
    "coverage",
    "dist",
    "docs",
    "**/*.example.ts"
  ]
}
